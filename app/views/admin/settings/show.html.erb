<%= simple_form_for(Setting.new, url: admin_settings_path) do |f| %>
  <%= f.input :app_name %>
  <%= f.input :host %>
  <%= f.input :maximum_invitation, as: :range %>
  <%= f.input :registration_allowed, wrapper: :custom_boolean_switch %>
  <%= f.input :registration_allowed, as: :boolean, role: 'switch' %>
  <%= f.input :invitation_allowed, as: :boolean %>
  <%= f.input :restrict_access_to_allowed_email_addresses, as: :boolean %>
  <%= f.input :allowed_email_addresses, input_html: { value: Setting.allowed_email_addresses.join(", ") }, as: :text %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
