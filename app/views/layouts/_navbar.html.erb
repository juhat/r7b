<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
  <div class="container-fluid">
    <%= link_to Setting.app_name, root_path, class: 'navbar-brand mb-0 h1' %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to t('.dashboard'), root_path, class: 'nav-link' %>
        </li>
        <% if current_user&.admin? %>
          <li class="nav-item">
          </li>
        <% end %>
      </ul>
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <% if Rails.env.development? %>
          <li class="nav-item">
            <%= link_to t('.mailbox'), letter_opener_web_path, class: 'nav-link' %>
          </li>
        <% end %>
        <% if current_user&.admin? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Admin
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li>
                <%= link_to t('.settings'), admin_settings_path, class: 'dropdown-item' %>
              </li>
<!--              <li><hr class="dropdown-divider"></li>-->
            </ul>
          </li>
        <% end %>
        <% if current_user %>
          <li class="nav-item">
            <%= link_to current_user.email, edit_user_registration_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= button_to t('devise.sign_out'), destroy_user_session_path, method: :delete, data: {confirm: t('confirm')}, class: 'nav-link btn' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to t('devise.sign_in'), new_user_session_path, class: 'nav-link btn' %>
          </li>
          <% if Setting.registration_allowed %>
            <li class="nav-item">
              <%= link_to t('devise.sign_up'), new_user_registration_path, class: 'nav-link btn' %>
            </li>
          <% end %>
        <% end %>
        <% if Setting.language_setting_allowed && I18n.available_locales.count > 1 %>
          <li class="nav-item dropdown border-start">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= t('lang') %>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <% I18n.available_locales.select{ |lang| lang != I18n.locale }.each do |lang| %>
                <li>
                  <%= link_to t(lang), root_path(lang: lang), class: 'dropdown-item' %>
                </li>
              <% end %>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
