<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
  <div class="container-fluid">
    <%= link_to Setting.app_name, root_path, class: 'navbar-brand mb-0 h1' %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to t('.dashboard'), root_path, class: 'nav-link' %>
        </li>
        <% if Rails.env.development? %>
          <li class="nav-item">
            <%= link_to t('.mailbox'), letter_opener_web_path, class: 'nav-link' %>
          </li>
        <% end %>
        <% if current_user&.admin? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Admin
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li>
                <%= link_to t('.settings'), admin_settings_path, class: 'dropdown-item' %>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <% if current_user %>
          <li class="nav-item">
            <%= link_to notifications_path, class: 'nav-link btn position-relative' do %>
              <% if current_user.notifications.unread.any? %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bell-fill" viewBox="0 0 16 16">
                  <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zm.995-14.901a1 1 0 1 0-1.99 0A5.002 5.002 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901z"/>
                </svg>
                <%= turbo_stream_from current_user %>
                <span class="badge rounded-pill bg-dark" id="notification-count"><%= current_user.notifications.unread.count %></span>
              <% else %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bell" viewBox="0 0 16 16">
                  <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zM8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5.002 5.002 0 0 1 13 6c0 .88.32 4.2 1.22 6z"/>
                </svg>
              <% end %>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to current_user.email, edit_user_registration_path, class: 'nav-link btn' %>
          </li>
          <li class="nav-item">
            <%= button_to t('devise.sign_out'), destroy_user_session_path, method: :delete, data: {confirm: t('confirm')}, class: 'nav-link btn' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to t('devise.sign_in'), new_user_session_path, class: 'nav-link btn' %>
          </li>
          <% if Setting.registration_allowed %>
            <li class="nav-item">
              <%= link_to t('devise.sign_up'), new_user_registration_path, class: 'nav-link btn' %>
            </li>
          <% end %>
        <% end %>
        <% if Setting.language_setting_allowed && I18n.available_locales.count > 1 %>
          <li class="nav-item dropdown border-start">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= t('lang') %>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <% I18n.available_locales.select{ |lang| lang != I18n.locale }.each do |lang| %>
                <li>
                  <%= link_to t(lang), root_path(lang: lang), class: 'dropdown-item' %>
                </li>
              <% end %>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
